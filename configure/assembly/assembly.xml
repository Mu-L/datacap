<!--            <directory>../dist/plugins</directory>-->
<!--            <outputDirectory>plugins</outputDirectory>-->
<!--            <fileMode>0644</fileMode>-->
<!--            <filtered>true</filtered>-->
<!--            <excludes>-->
<!--                <exclude>target/</exclude>-->
<!--                <exclude>*.md</exclude>-->
<!--            </excludes>-->
<!--        </fileSet>-->
    </fileSets>
</assembly>
